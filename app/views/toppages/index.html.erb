<% if logged_in? %>
  <div class="text-center">
      <%= form_with(model: @diary, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :title, 'タイトル' %>
          <%= f.text_area :title, class: 'form-control mb-3', rows: 1 %>
        </div>
        <div class="form-group"> 
          <%= f.label :content, '本文' %>
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Write', class: 'btn btn-primary btn-block mb-5' %>
      <% end %>
  </div>
  <%= render 'diaries/diaries', diaries: @diaries %>
<% else %>
  <%= render 'diaries/diaries', diaries: @diaries %>
<% end %>